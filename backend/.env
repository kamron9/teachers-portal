# Environment
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/tutoring_marketplace?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-for-development-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional for dev)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@tutoruz.com

# SMS Configuration (Optional for dev)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload (Optional for dev)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Payment Gateways (Optional for dev)
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SECRET_KEY=your-click-secret-key
CLICK_SERVICE_ID=your-click-service-id

PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key

UZUM_BANK_MERCHANT_ID=your-uzum-bank-merchant-id
UZUM_BANK_SECRET_KEY=your-uzum-bank-secret-key

STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Platform Settings
PLATFORM_COMMISSION_RATE=0.20
DEFAULT_TIMEZONE=Asia/Tashkent
DEFAULT_LANGUAGE=uz
MIN_NOTICE_HOURS=12
MAX_ADVANCE_DAYS=30

# Verification Settings
REQUIRE_EMAIL_VERIFICATION=false
REQUIRE_PHONE_VERIFICATION=false
TEACHER_AUTO_APPROVAL=true

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# File Upload Settings
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=15

# Admin Settings
ADMIN_EMAIL=admin@tutoruz.com
ADMIN_PHONE=+998901234567

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Webhook Settings
WEBHOOK_BASE_URL=http://localhost:3001
